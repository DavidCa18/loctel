        <script type="text/x-kendo-template" id="windowTemplate">
            ¿Desea eliminar la Central Telefónica <strong>#= nombre_mar #</strong>- <strong>#= nombre_cen #</strong> ? </p>
            <button class="k-button" id="yesButton">Confirmar</button>
            <button class="k-button" id="noButton"> Cancelar</button>
        </script>

        <script>
            $(document).ready(function () {

                var tipoArchivo = [{
                    "value": ".csv",
                    "text": ".csv"
                }, {
                    "value": ".txt",
                    "text": ".txt"
                }, {
                    "value": ".log",
                    "text": ".log"
                }];

                var separador = [{
                    "value": ";",
                    "text": ";"
                }, {
                    "value": ",",
                    "text": ","
                }, {
                    "value": "  ",
                    "text": "Tabulador"
                }];

                var ruta = [{
                    "value": "C:\\Estadisticas-Epygi",
                    "text": "C:\\Estadisticas-Epygi"
                }, {
                    "value": "C:\\Estadisticas-GrandStream",
                    "text": "C:\\Estadisticas-GrandStream"
                }, {
                    "value": "C:\\Estadisticas-Asterisk",
                    "text": "C:\\Estadisticas-Asterisk"
                }];

                var formatoFecha = [{
                    "value": "1",
                    "text": "Ejemplo: 12-Dec-2016"
                }, {
                    "value": "2",
                    "text": "Ejemplo: 12-12-2016"
                }, {
                    "value": "3",
                    "text": "Ejemplo: 2016-12-12"
                }];

                var provincia = [{
                    "value": "2",
                    "text": "2"
                }, {
                    "value": "3",
                    "text": "3"
                }, {
                    "value": "4",
                    "text": "4"
                }, {
                    "value": "5",
                    "text": "5"
                }, {
                    "value": "6",
                    "text": "6"
                }, {
                    "value": "7",
                    "text": "7"
                }, {
                    "value": "8",
                    "text": "8"
                }];

                var windowTemplate = kendo.template($("#windowTemplate").html());

                dataSource = new kendo.data.DataSource({
                    transport: {
                        read: {
                            url: "/ModeloCentral",
                            dataType: "json",
                            type: 'GET'
                        },
                        update: {
                            url: "/ModificarCentral",
                            dataType: "json",
                            type: 'POST'
                        },
                        destroy: {
                            url: "/EliminarCentral",
                            dataType: "json",
                            type: 'DELETE'
                        },
                        create: {
                            url: "/GuardarCentral",
                            dataType: "json",
                            type: 'POST'
                        },
                        parameterMap: function (options, operation) {
                            if (operation !== "read" && options.models) {
                                var datos = options.models[0];
                                return datos;
                            }
                        }
                    }, error: function (e) {
                        toastr.error(e.errorThrown, 'Error al Gestionar Central');
                    },
                    batch: true,
                    pageSize: 20,
                    schema: {
                        model: {
                            id: "id_cen",
                            fields: {
                                id_centralMarca: { validation: { required: true } },
                                nombre_cen: { validation: { required: true } },
                                tipo_archivo_cen: { validation: { required: true } },
                                separador_cen: { validation: { required: true } },
                                ruta_cen: { validation: { required: true } },
                                formato_fecha_cen: { validation: { required: true } },
                                num_provincia_cen: { validation: { required: true } }
                            }
                        }
                    }
                });

                $.get('/MarcaCentral').done(function (data) {

                    var window = $("#window").kendoWindow({
                        title: "Eliminación de Centrales Telefónicas",
                        visible: false,
                        width: "333px",
                        height: "110px",
                    }).data("kendoWindow");

                    $("#grid").kendoGrid({
                        dataSource: dataSource,
                        filterable: {
                            extra: false
                        },
                        pageable: true,
                        height: 550,
                        pageable: {
                            refresh: true,
                            pageSizes: true,
                            buttonCount: 5
                        },
                        toolbar: ["create"],
                        columns: [
                            { field: "id_centralMarca", values: data, title: "Marca", width: "130px" },
                            { field: "nombre_cen", title: "Modelo", width: "130px" },
                            { field: "tipo_archivo_cen", values: tipoArchivo, title: "Archivo", width: "120px" },
                            { field: "separador_cen", values: separador, title: "Separador", width: "120px" },
                            { field: "ruta_cen", values: ruta, title: "Ruta", width: "150px" },
                            { field: "formato_fecha_cen", values: formatoFecha, title: "Formato Fecha", width: "120px" },
                            { field: "num_provincia_cen", values: provincia, title: "N° Provincial", width: "120px" },
                            {
                                command: [
                                    { name: "edit" },
                                    {
                                        name: "Eliminar",
                                        click: function (e) {
                                            e.preventDefault();
                                            var tr = $(e.target).closest("tr");
                                            var data = this.dataItem(tr);
                                            window.content(windowTemplate(data));
                                            window.center().open();

                                            $("#yesButton").click(function () {
                                                dataSource.remove(data);
                                                dataSource.sync();
                                                window.close();
                                            })
                                            $("#noButton").click(function () {
                                                window.close();
                                            })
                                        }
                                    }
                                ], title: "&nbsp;", width: "250px"
                            }],
                        editable: "popup"
                    });
                });
            });
        </script>

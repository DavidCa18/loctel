        <!-- Mainly scripts -->
        <script src="js/jquery-3.1.1.min.js"></script>
        <script src="js/bootstrap.min.js"></script>
        <script src="js/plugins/metisMenu/jquery.metisMenu.js"></script>
        <script src="js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

        <!-- Custom and plugin javascript -->
        <script src="js/inspinia.js"></script>
        <script src="js/plugins/pace/pace.min.js"></script>
        <script src="js/bootstrap-multiselect.js" type="text/javascript"></script>
        <script src="js/plugins/toastr/toastr.min.js"></script>

        <script>
            BuscarExtensiones();
            BuscarUsuarios();

            $('#btnAsignar').click(function (event) {
                GuardarAsignacionUsuarios($('#cbxUsuarios').val(), $('#cbxExtensiones').val());
            });

            function GuardarAsignacionUsuarios(usuario, extension) {
                $.ajax({
                    type: "POST",
                    url: "/GuardarAsignacionCrmUsuarios",
                    data: { usuario: usuario, extension: extension },
                    success: function (responseText) {
                        toastr.success(responseText, 'Gestión Asignación Usuarios - Extensión');
                    }
                });
            }

            function BuscarExtensiones() {
                $.ajax({
                    type: "GET",
                    url: "/BuscarExtensionesCrmUsuarios",
                    success: function (responseText) {
                        var htmlOut = '';
                        for (var i = 0; i < responseText.length; i++) {
                            htmlOut += "<option value='" + responseText[i].ext_id + "'>" + responseText[i].ext_nombre + "  " + responseText[i].ext_numero + "</option>\n";
                        }

                        $('#cbxExtensiones').empty();
                        $('#cbxExtensiones').append(htmlOut);

                        $('#cbxExtensiones').multiselect('destroy');
                        $('#cbxExtensiones').multiselect({
                            includeSelectAllOption: true,
                            enableFiltering: true,
                            buttonWidth: '100%',
                            maxHeight: 200
                        });
                    }
                });
            }

            function BuscarUsuarios() {
                $.ajax({
                    type: "GET",
                    url: "/BuscarUsuariosCrmUsuarios",
                    success: function (responseText) {
                        var htmlOut = '';
                        for (var i = 0; i < responseText.length; i++) {
                            htmlOut += "<option value='" + responseText[i].usu_id + "'>" + responseText[i].usu_nombre + "</option>\n";
                        }

                        $('#cbxUsuarios').empty();
                        $('#cbxUsuarios').append(htmlOut);

                        $('#cbxUsuarios').multiselect('destroy');
                        $('#cbxUsuarios').multiselect({
                            includeSelectAllOption: true,
                            enableFiltering: true,
                            buttonWidth: '100%',
                            maxHeight: 200
                        });
                    }
                });
            }
        </script>


            ¿Desea Eliminar el Campo Asignación Llamadas <strong>#= Field #</strong> ? </p>
            <button class="k-button" id="yesButton">Confirmar</button>
            <button class="k-button" id="noButton"> Cancelar</button>
        </script>

        <script>
            $(document).ready(function () {
                BuscarCamposAsignacionLlamadas();
                ComprobarCamposAsignacion();

            });

            var tipoDato = [{
                "value": "int(11)",
                "text": "int(11)"
            }, {
                "value": "text",
                "text": "text"
            }];

            function ComprobarExcel() {
                $('#myModal5').modal('show');
            }

            $('#abrir').click(function (event) {
                $('#parsed_csv_list').empty();
            });

            $('#continuar').click(function (event) {
                location.replace('/adminIndex');
            });

            function BuscarCamposAsignacionLlamadas() {

                var windowTemplate = kendo.template($("#windowTemplate").html());

                dataSource = new kendo.data.DataSource({
                    transport: {
                        read: {
                            url: "/BuscarCamposAsignacionLlamadas",
                            dataType: "json",
                            type: 'GET'
                        },
                        destroy: {
                            url: "/EliminarCamposAsignacionLlamadas",
                            dataType: "json",
                            type: 'DELETE'
                        },
                        create: {
                            url: "/AgregarCamposAsignacionLlamadas",
                            dataType: "json",
                            type: 'POST'
                        },
                        parameterMap: function (options, operation) {
                            if (operation !== "read" && options.models) {
                                var datos = options.models[0];
                                return datos;
                            }
                        }
                    }, error: function (e) {
                        toastr.error(e.errorThrown, 'Error al Gestionar Campos Asignación Llamadas');
                    },
                    batch: true,
                    pageSize: 20,
                    schema: {
                        model: {
                            id: "Field",
                            fields: {
                                Field: { validation: { required: true } },
                                Type: { validation: { required: true } }
                            }
                        }
                    }
                });

                var window = $("#window").kendoWindow({
                    title: "Eliminación de Campos - Asignación Llamadas",
                    visible: false,
                    width: "400px",
                    height: "110px",
                }).data("kendoWindow");

                $("#grid").kendoGrid({
                    dataSource: dataSource,
                    filterable: {
                        extra: false
                    },
                    pageable: true,
                    height: 550,
                    pageable: {
                        refresh: true,
                        pageSizes: true,
                        buttonCount: 5
                    },
                    toolbar: ["create",
                        {
                            template:
                            '<a class="k-button k-grid-custom-command" onclick="ComprobarExcel()" id="abrir" href="\\#"><i class="fa fa-file-excel-o"></i> Examinar Excel</a>'
                        }],
                    columns: [
                        { field: "Field", title: "Nombre Campo", width: "200px" },
                        { field: "Type", values: tipoDato, title: "Tipo de Dato", width: "200px" },
                        {
                            command: [
                                {
                                    name: "Eliminar",
                                    click: function (e) {
                                        e.preventDefault();
                                        var tr = $(e.target).closest("tr");
                                        var data = this.dataItem(tr);
                                        window.content(windowTemplate(data));
                                        window.center().open();

                                        $("#yesButton").click(function () {
                                            dataSource.remove(data);
                                            dataSource.sync();
                                            window.close();
                                        })
                                        $("#noButton").click(function () {
                                            window.close();
                                        })
                                    }
                                }
                            ], title: "&nbsp;", width: "130px"
                        }],
                    editable: "popup"
                });
            }

            $('#files').on("change", function (e) {
                e.preventDefault();
                $('#files').parse({
                    config: {
                        complete: displayHTMLTable,
                        encoding: "ISO-8859-1"
                    },
                    before: function (file, inputElem) {
                        //console.log("Parsing file...", file);
                    },
                    error: function (err, file) {
                        console.log("ERROR:", err, file);
                    },
                    complete: function () {
                        //console.log("Done with all files");
                    }
                });
            });

            function displayHTMLTable(results) {
                var table = "";
                var data = results.data;

                for (i = 0; i < /* data.length */5; i++) {
                    table += "<tr>";
                    var row = data[i];
                    var cells = row.join(";").split(";");

                    for (j = 0; j < cells.length; j++) {
                        table += "<td width='100'>";
                        table += cells[j];
                        table += "</td>";
                    }
                    table += "</tr>";
                }
                $('#parsed_csv_list').empty();
                $('#parsed_csv_list').append(table);

            }

            function ComprobarCamposAsignacion() {
                $.ajax({
                    type: "GET",
                    url: "/ComprobarAsignacionLlamadas",
                    success: function (responseText) {
                        if (responseText[0].numero != 0) {
                            $('#mdAdvertencia').modal({
                                backdrop: 'static',
                                keyboard: false
                            });
                        }
                    }
                });
            }
        </script>

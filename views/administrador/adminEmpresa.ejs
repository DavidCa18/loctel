                    <div class="row wrapper border-bottom white-bg page-heading">
                        <div class="col-sm-4">
                            <h2>Empresa</h2>
                            <ol class="breadcrumb">
                                <li>
                                    <a>Administrador</a>
                                </li>
                                <li class="active">
                                    <strong>Empresa</strong>
                                </li>
                            </ol>
                        </div>
                    </div>

                    <div class="wrapper wrapper-content animated fadeInRight">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="ibox-title">
                                    <form role="form" action="/GuardarEmpresa" method="POST" id="fmrEmpresa">
                                        <div class="form-group">
                                            <label>Razón Social</label>
                                            <input type="text" placeholder="Ingresar Nombre" class="form-control" id="txtRazonSocial" name="txtRazonSocial">
                                        </div>
                                        <div class="form-group">
                                            <label>R.U.C</label>
                                            <input type="number" placeholder="Ingresar Identificaión" class="form-control" id="txtRuc" name="txtRuc">
                                        </div>
                                        <div class="form-group">
                                            <label>Dirección</label>
                                            <input type="text" placeholder="Ingresar Dirección" class="form-control" id="txtDireccion" name="txtDireccion">
                                        </div>
                                        <div class="form-group">
                                            <label>Teléfono</label>
                                            <input type="number" placeholder="Ingresar Teléfono" class="form-control" id="txtTelefono" name="txtTelefono">
                                        </div>
                                        <br>
                                        <div class="form-group">
                                            <button class="btn btn-primary" type="submit" style="font-size: 15px" id="btnGuardarEmpresa"><strong>Guardar</strong></button>

                    <div class="modal-body">

                    </div>
                </div>
            </div>
        </div>

        <!-- Mainly scripts -->
        <script src="js/jquery-3.1.1.min.js"></script>
        <script src="js/bootstrap.min.js"></script>
        <script src="js/plugins/metisMenu/jquery.metisMenu.js"></script>
        <script src="js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

        <!-- Custom and plugin javascript -->
        <script src="js/inspinia.js"></script>
        <script src="js/plugins/pace/pace.min.js"></script>
        <script src="js/plugins/toastr/toastr.min.js"></script>
        <script src="js/plugins/sweetalert/sweetalert.min.js"></script>
        <script>

            BuscarEmpresa();

            $("#btnGuardarEmpresa").click(function (e) {
                e.preventDefault();
                if (Validar()) {
                    GuardarEmpresa(e);
                }
            });

            function GuardarEmpresa(e) {

                e.preventDefault();
                var data = $('#fmrEmpresa').serialize();

                $.ajax({
                    type: "POST",
                    url: "/GuardarEmpresa",
                    data: data,
                    success: function (responseText) {
                        toastr.success(responseText, 'Gestión Empresa');
                        BuscarEmpresa();
                    }
                });
            }

            function BuscarEmpresa(params) {
                $.ajax({
                    type: "GET",
                    url: "/BuscarEmpresa",
                    success: function (responseText) {

                        $('#txtRazonSocial').val(responseText[0].nombreEmpresa);
                        $('#txtRuc').val(responseText[0].rucEmpresa);
                        $('#txtDireccion').val(responseText[0].direccionEmpresa);
                        $('#txtTelefono').val(responseText[0].telefonoEmpresa);

                    }
                }).fail(function (xhr, ajaxOptions, thrownError) {
                    toastr.error('Error al Buscar Empresa', 'Gestión Empresa');
                });
            }

            function Validar() {

                if ($('#txtRazonSocial').val().length > 0) {
                    if ($('#txtRuc').val().length == 13) {
                        if ($('#txtDireccion').val().length > 0) {
                            if ($('#txtTelefono').val().length > 0) {
                                return true;
                            } else {
                                swal("Advertencia", "Ingresar el Número Telefónico", "warning");
                            }
                        } else {
                            swal("Advertencia", "Ingresar la Dirección", "warning");
                        }
                    } else {
                        swal("Advertencia", "La cantidad de caracteres en el R.U.C es incorrecta", "warning");
                    }
                } else {
                    swal("Advertencia", "Ingresar el Nombre", "warning");
                }
                return false;
            }
        </script>
        
        <script type="text/javascript" src="/socket.io/socket.io.js"></script>

        <script src="js/timeOut/timeOut.js"></script>
        <%  } else{ %>
            <script>
                location.replace('/inicio');
            </script>
            <% } %>


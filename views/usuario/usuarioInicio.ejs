        <!-- Mainly scripts -->
        <script src="js/jquery-3.1.1.min.js"></script>
        <script src="js/bootstrap.min.js"></script>
        <script src="js/plugins/metisMenu/jquery.metisMenu.js"></script>
        <script src="js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

        <!-- Custom and plugin javascript -->
        <script src="js/inspinia.js"></script>
        <script src="js/plugins/pace/pace.min.js"></script>
        <script src="js/plugins/toastr/toastr.min.js"></script>
        <script src="js/plugins/dataTables/datatables.min.js"></script>

        <script>
            var extensiones = "extension.ext_id = " + $('#id_extension').val();
            BuscarAsignacionLlamadas(extensiones);
            setTimeout(function () { Buscar(); }, 3000);

            $('#btnGuardaComentario').click(function (event) {

                var id_asignacion_llamada = $('#txtIdAsignacionUsuario').val();
                var comentario = $('#txtComentario').val();
                GuardarComentario(comentario, id_asignacion_llamada);

            });

            function GuardarComentario(comentario, id_asignacion_llamada) {
                $.ajax({
                    type: "POST",
                    url: "/GuardarComentarioAsignacionLlamadasUsuario",
                    data: { comentario: comentario, id_asignacion_llamada: id_asignacion_llamada },
                    success: function (responseText) {

                        $('#mdComentario').modal('hide');

                        toastr.success(responseText, 'Gestión Asignación Llamadas');
                        var extensiones = "extension.ext_id = " + $('#id_extension').val();
                        BuscarAsignacionLlamadas(extensiones);
                    }
                });
            }

            function GuardarEstado(estado, id_asignacion_llamada) {
                $.ajax({
                    type: "POST",
                    url: "/GuardarEstadoAsignacionLlamadasUsuario",
                    data: { estado: estado, id_asignacion_llamada: id_asignacion_llamada },
                    success: function (responseText) {
                        toastr.success(responseText, 'Gestión Asignación Llamadas');

                        var extensiones = "extension.ext_id = " + $('#id_extension').val();
                        BuscarAsignacionLlamadas(extensiones);
                    }
                });
            }

            function BuscarAsignacionLlamadas(extensiones) {

                $.ajax({
                    type: "GET",
                    url: "/BuscarAsignacionLlamadasUsuario",
                    data: { extensiones: extensiones },
                    success: function (responseText) {

                        var table = $('#tbDetalles').DataTable();
                        table.destroy();
                        $('#tbDetalles').empty();

                        table = $('#tbDetalles').DataTable({
                            "ordering": false,
                            pageLength: 25,
                            responsive: true,
                            dom: '<"html5buttons"B>lTfgitp',
                            buttons: [
                                { extend: 'csv', className: 'exportar-csv-e' },
                                { extend: 'excel', title: 'asignacion-search-excel', className: 'exportar-excel-e' },
                                {
                                    text: '<i class=\'fa fa-refresh\'><i>',
                                    action: function (e, dt, node, config) {
                                        location.reload();
                                    }
                                }
                            ],
                            data: responseText[0],
                            columns: [
                                { data: 'ext_nombre', title: "Extensión" },
                                { data: 'departamento', title: "Departamento" },
                                { data: 'asig_apellidos', title: "A. Apellido" },
                                { data: 'asig_nombre', title: "A. Nombre" },
                                { data: 'asig_direccion', title: "A. Dirección" },
                                { data: 'asig_poblacion', title: "A. Población" },
                                { data: 'asig_telefono', title: "A. Teléfono" },
                                { data: 'asig_email', title: "A. Email" },
                                { data: 'asig_genero', title: "A. Género" },
                                { data: 'asig_ingresos', title: "A. Ingresos" },
                                { data: 'asig_descripcion', title: "A. Descripción" },
                                { data: 'asig_comentario', title: "A. Comentario" },
                                { data: 'asig_estado', title: "A. Estado" },
                                { data: 'asig_id', title: "Código" }
                            ],
                            "columnDefs": [
                                {
                                    "targets": [14],
                                    "data": null,
                                    "width": "1%",
                                    "defaultContent": "<button id='btnComentario' style='background: none; border: none'><i class='fa fa-comments'></i></button>"
                                },
                                {
                                    "targets": [15],
                                    "data": null,
                                    "width": "1%",
                                    "defaultContent": "<button id='btnEstado' style='background: none; border: none'><i class='fa fa-phone'></i></button>"
                                },
                                {
                                    "targets": [0, 1, 4, 5, 7, 8, 9, 13],
                                    "visible": false,
                                    "searchable": false
                                }],
                            "language": {
                                "sProcessing": "Procesando...",
                                "sLengthMenu": "Mostrar _MENU_ registros",
                                "sZeroRecords": "No se encontraron resultados",
                                "sEmptyTable": "Ningún dato disponible en esta tabla",
                                "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                                "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                                "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                                "sInfoPostFix": "",
                                "sSearch": "",
                                "sUrl": "",
                                "sInfoThousands": ",",
                                "sLoadingRecords": "Cargando...",
                                "oPaginate": {
                                    "sFirst": "Primero",
                                    "sLast": "Último",
                                    "sNext": "Siguiente",
                                    "sPrevious": "Anterior"
                                },
                                "oAria": {
                                    "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                                    "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                                },
                                searchPlaceholder: "Buscar datos"
                            }
                        });
                        $('#tbDetalles tbody').on('click', '#btnComentario', function () {
                            var data = table.row($(this).parents('tr')).data();

                            $('#txtIdAsignacionUsuario').val(data.asig_id);
                            $('#txtComentario').val(data.asig_comentario);
                            $('#mdComentario').modal('show');
                        });

                        $('#tbDetalles tbody').on('click', '#btnEstado', function () {
                            var data = table.row($(this).parents('tr')).data();

                            GuardarEstado("LLAMADA REALIZADA", data.asig_id);
                        });

                    }
                });
            }

        </script>

